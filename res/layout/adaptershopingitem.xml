<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:descendantFocusability="blocksDescendants"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <ImageView
            android:layout_marginTop="@dimen/topone"
            android:layout_marginLeft="@dimen/topone"
            android:id="@+id/imageview_publish_ol"
            android:src="@drawable/head_photopath"
            android:layout_width="@dimen/w_wushi"
            android:layout_height="@dimen/h_wushi"/>
    <LinearLayout
            android:layout_marginLeft="@dimen/topone"
            android:layout_marginBottom="@dimen/toptwo"
            android:layout_marginRight="@dimen/topone"
            android:layout_marginTop="@dimen/toptwo"
            android:layout_width="fill_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/textview_publishnacknameol"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/shiwu"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/textview_timeol"
                    android:textSize="@dimen/shi"
                    android:textColor="@color/huise"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
                android:id="@+id/textview_publishtitle"
                android:textColor="@color/huise"
                android:textSize="@dimen/shisi"
                android:layout_marginTop="@dimen/toptwo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/textview_contentol"
                android:layout_width="fill_parent"
                android:layout_marginTop="@dimen/toptwo"
                android:textColor="@color/hei"
                android:textSize="@dimen/shiwu"
                android:layout_height="wrap_content"/>
        <com.example.cloudAndPurchasing.customcontrol.ThisGridView
                android:id="@+id/gridview_this_photool"
                android:layout_width="fill_parent"
                android:numColumns="3"
                android:horizontalSpacing="@dimen/biankuangone"
                android:verticalSpacing="@dimen/biankuangone"
                android:listSelector="@color/touming"
                android:layout_height="wrap_content">

        </com.example.cloudAndPurchasing.customcontrol.ThisGridView>
        <TextView
                android:id="@+id/textveiw_contentol"
                android:layout_marginTop="@dimen/toptwo"
                android:layout_width="fill_parent"
                android:textColor="@color/hei"
                android:textSize="@dimen/shiwu"
                android:layout_height="wrap_content"/>
        <LinearLayout
                android:layout_marginTop="@dimen/toptwo"
                android:layout_width="fill_parent"
                android:orientation="horizontal"
                android:gravity="right|center_vertical"
                android:layout_height="wrap_content">
            <ImageButton
                    android:id="@+id/button_zanol"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/shiba"
                    android:padding="@dimen/wu"
                    android:text="@string/zan"
                    android:background="@color/touming"
                    android:textColor="@color/hei"
                    android:src="@drawable/icon_attention"
                    android:gravity="center_vertical"
                    android:layout_gravity="right"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/textview_zannumberol"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="@dimen/toptwo"
                    android:textSize="@dimen/shier"
                    android:textColor="@color/hei"
                    android:padding="@dimen/wu"
                    android:layout_gravity="right"
                    android:layout_height="wrap_content"/>
            <ImageButton
                    android:id="@+id/button_publishol"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/shiba"
                    android:layout_marginLeft="@dimen/w_three"
                    android:text="@string/zan"
                    android:src="@drawable/discuss"
                    android:background="@color/touming"
                    android:textColor="@color/hei"
                    android:gravity="center_vertical"
                    android:layout_height="@dimen/w_four"/>
            <TextView
                    android:id="@+id/textview_publishnumberol"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/shier"
                    android:textColor="@color/hei"
                    android:padding="@dimen/wu"
                    android:layout_marginLeft="@dimen/toptwo"
                    android:layout_gravity="right"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>