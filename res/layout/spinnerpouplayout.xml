<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/linearlayout_yesoron"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <Button
                android:id="@+id/button_tongyi"
                android:layout_width="@dimen/w_one"
                android:textSize="@dimen/shisi"
                android:textColor="@color/hei"
                android:text="@string/tongyi"
                android:background="@drawable/button_popupyesorno"
                android:layout_height="@dimen/h_threety"/>
        <Button
                android:id="@+id/button_butongyi"
                android:layout_marginTop="@dimen/biankuangone"
                android:layout_width="@dimen/w_one"
                android:textSize="@dimen/shisi"
                android:textColor="@color/hei"
                android:text="@string/butonyi"
                android:background="@color/huibai"
                android:layout_height="@dimen/h_threety"/>
    </LinearLayout>
</LinearLayout>