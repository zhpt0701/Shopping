<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:gravity="center_vertical"
              android:descendantFocusability="blocksDescendants"

              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
            android:layout_marginLeft="@dimen/topone"
            android:layout_marginRight="@dimen/topone"
            android:layout_marginTop="@dimen/topthree"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/textview_nameaddress"
                android:layout_weight="1"
                android:textSize="@dimen/shisi"
                android:textColor="@color/hei"
                android:gravity="center_vertical|left"
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/textview_addresshpone"
                android:layout_weight="1"
                android:textSize="@dimen/shier"
                android:textColor="@color/hei"
                android:gravity="center_vertical|right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
            android:layout_marginLeft="@dimen/topone"
            android:layout_marginRight="@dimen/topone"
            android:id="@+id/textview_shsppingaddress"
            android:layout_marginTop="@dimen/topfour"
            android:paddingBottom="@dimen/topone"
            android:layout_width="fill_parent"
            android:textColor="@color/hei"
            android:textSize="@dimen/shier"
            android:background="@drawable/textview_shoppingaddressback"
            android:layout_height="wrap_content"/>
    <LinearLayout
            android:layout_marginLeft="@dimen/topone"
            android:layout_marginRight="@dimen/topone"
            android:layout_marginBottom="@dimen/topone"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <RadioButton
                android:id="@+id/checkbox_default"
                android:button="@null"
                android:drawableLeft="@drawable/rediobutton_address"
                android:text="@string/default_address"
                android:paddingTop="@dimen/topone"
                android:textSize="@dimen/shier"
                android:gravity="center"
                android:textColor="@color/radiobutton_textcolor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <Button
                android:id="@+id/button_editoraddress"
                android:drawableLeft="@drawable/edit_address"
                android:textSize="@dimen/shier"
                android:gravity="center"
                android:text="@string/editor"
                android:visibility="invisible"
                android:paddingTop="@dimen/topone"
                android:textColor="@color/hei"
                android:background="@color/touming"
                android:paddingRight="@dimen/toptwo"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/h_threety"/>
        <Button
                android:id="@+id/button_deleteaddress"
                android:layout_marginLeft="@dimen/topone"
                android:drawableLeft="@drawable/delte_address"
                android:background="@color/touming"
                android:textColor="@color/hei"
                android:textSize="@dimen/shier"
                android:gravity="center"
                android:text="@string/address_delete"
                android:paddingRight="@dimen/toptwo"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/h_threety"/>
    </LinearLayout>
</LinearLayout>