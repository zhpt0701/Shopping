<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:descendantFocusability="blocksDescendants"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ImageView
            android:id="@+id/imageview_this"
            android:src="@drawable/head_photopath"
            android:layout_marginTop="@dimen/topone"
            android:layout_marginLeft="@dimen/topone"
            android:layout_width="@dimen/w_wushi"
            android:layout_height="@dimen/h_wushi"/>
    <LinearLayout
            android:layout_marginLeft="@dimen/toptwo"
            android:layout_marginRight="@dimen/topone"
            android:layout_width="fill_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
        <LinearLayout
                android:layout_marginTop="@dimen/toptwo"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/textview_publishnackname"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/shiwu"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/textview_time"
                    android:textSize="@dimen/shier"
                    android:textColor="@color/huise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
                android:layout_marginTop="@dimen/toptwo"
                android:id="@+id/textview_content"
                android:layout_width="fill_parent"
                android:textColor="@color/hei"
                android:textSize="@dimen/shiwu"
                android:layout_height="wrap_content"/>
        <com.example.cloudAndPurchasing.customcontrol.ThisGridView
                android:id="@+id/gridview_this_photo"
                android:layout_width="fill_parent"
                android:numColumns="3"
                android:layout_marginTop="@dimen/toptwo"
                android:horizontalSpacing="@dimen/toptwo"
                android:verticalSpacing="@dimen/biankuangone"
                android:listSelector="@color/touming"
                android:layout_height="wrap_content">

        </com.example.cloudAndPurchasing.customcontrol.ThisGridView>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:gravity="right|center_vertical"
                android:layout_marginRight="@dimen/topone"
                android:layout_height="@dimen/h_sishi">
            <Button
                    android:id="@+id/button_zan"
                    android:layout_width="@dimen/topfour"
                    android:textSize="@dimen/shiwu"
                    android:drawableLeft="@drawable/icon_attention"
                    android:background="@color/touming"
                    android:textColor="@color/hei"
                    android:gravity="center_vertical"
                    android:layout_gravity="right"
                    android:layout_height="fill_parent"/>
            <TextView
                    android:id="@+id/textview_zannumber"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/shisi"
                    android:textColor="@color/hei"
                    android:layout_gravity="right"
                    android:gravity="center"
                    android:layout_height="fill_parent"/>
            <Button
                    android:id="@+id/button_share_publish"
                    android:layout_width="@dimen/topfour"
                    android:textSize="@dimen/shiba"
                    android:layout_marginLeft="@dimen/w_three"
                    android:drawableLeft="@drawable/discuss"
                    android:background="@color/touming"
                    android:textColor="@color/hei"
                    android:gravity="center_vertical"
                    android:layout_marginRight="@dimen/topone"
                    android:layout_height="fill_parent"/>
            <TextView
                    android:id="@+id/textview_publish_number"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/shisi"
                    android:textColor="@color/hei"
                    android:layout_gravity="right"
                    android:gravity="center"
                    android:layout_height="fill_parent"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>