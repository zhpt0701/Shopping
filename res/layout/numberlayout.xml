<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:gravity="center"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">
    <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/topfour"
                android:layout_marginRight="@dimen/topfour"
                android:background="@drawable/gridview_back"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/h_erbaiqi">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                <TextView
                        android:layout_width="fill_parent"
                        android:textColor="@color/hei"
                        android:textSize="@dimen/shisi"
                        android:gravity="center"
                        android:text="@string/duobaohao_ol"
                        android:paddingTop="@dimen/topone"
                        android:layout_marginBottom="@dimen/topone"
                        android:background="@color/touming"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/textview_luckynumber_sum"
                        android:textSize="@dimen/shisi"
                        android:paddingLeft="@dimen/topthree"
                        android:textColor="@color/huise"
                        android:paddingTop="@dimen/topone"
                        android:paddingBottom="@dimen/topone"
                        android:background="@drawable/textview_line_bottom"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"/>
                <com.example.cloudAndPurchasing.customcontrol.listviewupdown.PullToRefreshLayout
                        android:id="@+id/popuplayout_updata"
                        android:layout_width="fill_parent"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">
                    <include layout="@layout/refresh_head"/>
                    <com.example.cloudAndPurchasing.customcontrol.listviewupdown.PullableScrollView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent">
                        <com.example.cloudAndPurchasing.customcontrol.ThisGridView
                                android:id="@+id/gridview_luckynunber_ol"
                                android:layout_width="fill_parent"
                                android:numColumns="3"
                                android:listSelector="@color/touming"
                                android:background="@color/bai"
                                android:horizontalSpacing="@dimen/toptwo"
                                android:verticalSpacing="@dimen/biankuangone"
                                android:layout_height="fill_parent"/>
                    </com.example.cloudAndPurchasing.customcontrol.listviewupdown.PullableScrollView>
                    <include layout="@layout/load_more"/>
                </com.example.cloudAndPurchasing.customcontrol.listviewupdown.PullToRefreshLayout>
                <TextView
                        android:background="@color/huibai"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/biankuang"/>
                <Button
                        android:id="@+id/button_luck_number_this"
                        android:paddingTop="@dimen/topone"
                        android:paddingBottom="@dimen/topone"
                        android:textColor="@color/hei"
                        android:textSize="@dimen/shisi"
                        android:gravity="center"
                        android:text="@string/ok"
                        android:background="@color/touming"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/linearlayout_this_lucknumber"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center"
                android:visibility="gone"
                android:background="@color/beijing"
                android:layout_width="@dimen/w_wushi"
                android:layout_height="@dimen/h_wushi">
            <ProgressBar
                    android:layout_width="@dimen/topfour"
                    android:layout_height="@dimen/topfour"/>
        </LinearLayout>
    </FrameLayout>


</LinearLayout>