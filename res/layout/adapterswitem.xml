<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:gravity="center"
              android:descendantFocusability="blocksDescendants"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ImageView
            android:id="@+id/imagebutton_sw"
            android:layout_marginTop="@dimen/topone"
            android:layout_marginBottom="@dimen/topone"
            android:layout_width="@dimen/w_bashi"
            android:layout_marginLeft="@dimen/topone"
            android:layout_height="@dimen/h_bashi"/>
    <LinearLayout
            android:layout_marginLeft="@dimen/topthree"
            android:layout_marginTop="@dimen/topone"
            android:layout_marginBottom="@dimen/topone"
            android:layout_marginRight="@dimen/topone"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >
        <TextView
                android:id="@+id/textview_swgoodsname"
                android:layout_width="fill_parent"
                android:textSize="@dimen/shiwu"
                android:textColor="@color/hei"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/textview_swnumber"
                android:layout_width="fill_parent"
                android:textSize="@dimen/shier"
                android:textColor="@color/huise"
                android:layout_marginTop="@dimen/toptwo"
                android:layout_height="wrap_content"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/shier"
                    android:text="幸运码:"
                    android:textColor="@color/huise"
                    android:layout_marginTop="@dimen/toptwo"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/textview_sw_lucky"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/shier"
                    android:textColor="@color/tiltle"
                    android:layout_marginTop="@dimen/toptwo"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

        <TextView
                android:id="@+id/textview_sw_time"
                android:layout_width="fill_parent"
                android:textSize="@dimen/shier"
                android:layout_marginTop="@dimen/toptwo"
                android:textColor="@color/huise"
                android:layout_height="wrap_content"/>
        <Button
                android:id="@+id/button_swselect"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:textSize="@dimen/shi"
                android:textColor="@color/blue"
                android:text="@string/chakan"
                android:background="@color/touming"
                android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>