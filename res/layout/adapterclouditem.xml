<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:gravity="center_vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:gravity="center_vertical"
            android:background="@drawable/linearlayout_clouditem"
            android:layout_height="wrap_content">
        <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <ImageView
                    android:id="@+id/imageview_cloudroomm"
                    android:paddingTop="@dimen/topone"
                    android:paddingLeft="@dimen/topone"
                    android:paddingBottom="@dimen/topone"
                    android:layout_width="@dimen/w_yibai"
                    android:layout_height="@dimen/h_yibai"/>
            <ImageView
                    android:id="@+id/imageview_cloudroomm_this"
                    android:layout_width="wrap_content"
                    android:background="@color/touming"
                    android:paddingLeft="@dimen/topone"
                    android:src="@drawable/fangzhu"
                    android:visibility="gone"
                    android:layout_height="wrap_content"/>
        </FrameLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/topone"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_marginTop="@dimen/topone"
                    android:id="@+id/textview_cloudroomname"
                    android:layout_width="fill_parent"
                    android:textColor="@color/hei"
                    android:textSize="@dimen/shisi"
                    android:layout_marginRight="@dimen/toptwo"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/textview_cloudroomtime"
                    android:layout_width="fill_parent"
                    android:textColor="@color/hei"
                    android:textSize="@dimen/shier"
                    android:gravity="left"
                    android:layout_marginRight="@dimen/toptwo"
                    android:layout_marginTop="@dimen/toptwo"
                    android:layout_height="wrap_content"/>
            <ProgressBar
                    android:id="@+id/progressbar_layout_roomthis"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="fill_parent"
                    android:layout_marginRight="@dimen/toptwo"
                    android:progressDrawable="@drawable/progressbar_drwable"
                    android:layout_height="@dimen/toptwo"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:id="@+id/textview_cloudroomall"
                        android:gravity="left"
                        android:textSize="@dimen/shier"
                        android:textColor="@color/huise"
                        android:layout_marginTop="@dimen/toptwo"
                        style="@style/layout_anniuH"
                        android:layout_weight="1"
                        />
                <TextView
                        android:id="@+id/textview_cloudroomshengyu"
                        android:gravity="right"
                        android:textColor="@color/huise"
                        android:textSize="@dimen/shier"
                        android:layout_marginTop="@dimen/toptwo"
                        android:layout_marginRight="@dimen/toptwo"
                        style="@style/layout_anniuH"
                        android:layout_weight="1"
                        />
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                <Button
                        android:id="@+id/button_yaoqinghaoyou"
                        android:background="@drawable/button_cloudroomback"
                        android:layout_marginTop="@dimen/toptwo"
                        android:paddingBottom="@dimen/toptwo"
                        android:paddingTop="@dimen/toptwo"
                        android:paddingLeft="@dimen/topthree"
                        android:paddingRight="@dimen/topthree"
                        android:textColor="@color/bai"
                        android:textSize="@dimen/shi"
                        android:text="@string/haoyouainggou"
                        android:layout_marginBottom="@dimen/topone"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/h_threety"
                        />
                <Button
                        android:id="@+id/button_start"
                        android:text="@string/buy"
                        android:layout_marginTop="@dimen/toptwo"
                        android:paddingBottom="@dimen/toptwo"
                        android:paddingTop="@dimen/toptwo"
                        android:paddingLeft="@dimen/w_ershiwu"
                        android:paddingRight="@dimen/w_ershiwu"
                        android:background="@drawable/button_cloudroombackone"
                        android:textColor="@color/bai"
                        android:textSize="@dimen/shi"
                        android:layout_marginLeft="@dimen/toptwo"
                        android:layout_marginBottom="@dimen/topone"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/h_threety"
                        />
            </LinearLayout>
        </LinearLayout>
        <ImageButton
                android:id="@+id/imagebutton_add_delete"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/toptwo"
                android:src="@drawable/room_share_ol"
                android:background="@color/touming"
                android:layout_width="@dimen/h_threety"
                android:layout_height="@dimen/h_threety"/>
    </LinearLayout>

</LinearLayout>