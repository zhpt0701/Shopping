<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/bai"
              android:fitsSystemWindows="true"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@color/tiltle"
            android:layout_height="@dimen/biaotigao">
        <Button
                android:id="@+id/imagebutton_home"
                android:layout_weight="1"
                android:paddingLeft="@dimen/topone"
                android:drawableLeft="@drawable/arrows_l"
                android:background="@color/touming"
                style="@style/layout_anniuH"/>
        <TextView
                android:textColor="@color/bai"
                android:textSize="@dimen/shiba"
                android:text="@string/chou"
                android:layout_weight="3"
                android:gravity="center"
                style="@style/layout_anniuH"/>
        <TextView
                android:layout_weight="1"
                style="@style/layout_anniuH"/>
    </LinearLayout>
    <RelativeLayout
            android:layout_weight="6"
            style="@style/layout_anniuV">
        <com.example.cloudAndPurchasing.customcontrol.LuckyPanView
                android:id="@+id/id_luckypan"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_centerInParent="true"
                android:paddingTop="@dimen/topone"
                android:paddingLeft="@dimen/topfour"
                android:paddingRight="@dimen/topfour"
                 />

        <ImageView
                android:id="@+id/id_start_btn"
                android:src="@drawable/start_ol"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
    </RelativeLayout>
    <TextView
            android:id="@+id/textview_the_winning"
            android:layout_marginTop="@dimen/topone"
            android:layout_width="fill_parent"
            android:layout_marginRight="@dimen/w_three"
            android:layout_marginLeft="@dimen/w_three"
            android:paddingTop="@dimen/topone"
            android:paddingBottom="@dimen/topone"
            android:textColor="@color/bai"
            android:textSize="@dimen/shier"
            android:gravity="center_horizontal"
            android:background="@drawable/button_submititem"
            android:layout_height="wrap_content"/>
    <LinearLayout
            android:layout_weight="4"
            style="@style/layout_xv">
        <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_marginLeft="@dimen/topfour"
                    android:layout_marginRight="@dimen/topfour"
                    android:layout_height="fill_parent">
                <ImageView
                        android:layout_marginTop="@dimen/topthree"
                        android:src="@drawable/rule"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:textColor="@color/tiltle"
                        android:textSize="@dimen/shiwu"
                        android:layout_marginTop="@dimen/topthree"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:textColor="@color/tiltle"
                        android:textSize="@dimen/shisan"
                        android:layout_marginTop="@dimen/h_three"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:textColor="@color/tiltle"
                        android:textSize="@dimen/shiwu"
                        android:layout_marginTop="@dimen/h_three"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:textColor="@color/tiltle"
                        android:textSize="@dimen/shisan"
                        android:layout_marginTop="@dimen/h_three"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</LinearLayout>