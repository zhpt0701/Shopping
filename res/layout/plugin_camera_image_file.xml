<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent" 
    android:background="@color/bai"
    >
    <RelativeLayout
        android:id="@+id/headview"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@drawable/plugin_camera_title_bar" 
        android:gravity="center_vertical"
        >
        
        <TextView
            android:id="@+id/headerTitle"
            android:layout_width="wrap_content" 
       		android:layout_height="wrap_content" 
       		android:text="@string/photo"
       		android:layout_centerInParent="true"
       		android:textSize="@dimen/ershi"
			android:textColor="#ffffff"
            />
        
        <Button
            android:background="@drawable/plugin_camera_title_btn_cancel"
            android:layout_marginTop="@dimen/toptwo"
            android:layout_marginBottom="@dimen/toptwo"
            android:layout_width="@dimen/w_qishi"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:id="@+id/cancel"
            android:text="@string/quxiao"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/shisi"
            android:textColor="#fff"
            />
    </RelativeLayout>
    
    
	<GridView
        android:id="@+id/fileGridView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/headview"
        android:layout_centerInParent="true"
        android:horizontalSpacing="10dp"
        android:numColumns="2"
        android:verticalSpacing="10dp"
        />
    
    
</RelativeLayout>