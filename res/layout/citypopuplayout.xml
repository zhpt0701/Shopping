<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:descendantFocusability="blocksDescendants"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/topfour"
            android:layout_marginRight="@dimen/topfour"
            android:layout_width="fill_parent"
            android:background="@color/huibai"
            android:layout_height="@dimen/pop">
        <TextView
                android:text="@string/choose"
                android:textSize="@dimen/shiba"
                android:textColor="@color/blue"
                android:padding="@dimen/topone"
                android:background="@drawable/textview_xiabian"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_marginTop="@dimen/topone"
                android:layout_height="wrap_content">
            <com.example.cloudAndPurchasing.customcontrol.control.WheelView
                    android:id="@+id/id_province"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >
            </com.example.cloudAndPurchasing.customcontrol.control.WheelView>

            <com.example.cloudAndPurchasing.customcontrol.control.WheelView
                    android:id="@+id/id_city"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >
            </com.example.cloudAndPurchasing.customcontrol.control.WheelView>

            <com.example.cloudAndPurchasing.customcontrol.control.WheelView
                    android:id="@+id/id_district"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >
            </com.example.cloudAndPurchasing.customcontrol.control.WheelView>
        </LinearLayout>
        <Button
                android:id="@+id/btn_confirm"
                android:layout_marginTop="10dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/topone"
                android:paddingBottom="@dimen/topone"
                android:gravity="center"
                android:text="确定"
                android:textSize="@dimen/shiwu"
                android:layout_marginBottom="@dimen/topone"
                android:background="@drawable/button_submititem"
                android:layout_marginLeft="@dimen/topone"
                android:layout_marginRight="@dimen/topone"
                android:textColor="@color/bai" />
    </LinearLayout>

</LinearLayout>