<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:descendantFocusability="blocksDescendants"
              android:layout_width="match_parent"
              android:gravity="center"
              android:layout_height="match_parent">
    <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:layout_width="fill_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:background="@color/bai"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:layout_width="fill_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content">
                <ImageView
                        android:id="@+id/imageview_shangpin_ol"
                        android:layout_width="@dimen/w_bashi"
                        android:layout_height="@dimen/h_bashi"
                        android:layout_marginTop="@dimen/toptwo"
                        android:layout_marginLeft="@dimen/toptwo"
                        android:paddingBottom="@dimen/toptwo"
                        android:src="@drawable/jiazaishibai_03"
                        />
                <LinearLayout
                        android:layout_marginLeft="@dimen/topone"
                        android:layout_marginRight="@dimen/topone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        >
                    <LinearLayout
                            android:layout_marginTop="@dimen/topone"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">
                        <TextView
                                android:id="@+id/textivew_pnumber"
                                android:textColor="@color/huise"
                                android:textSize="@dimen/shier"
                                android:gravity="center_vertical"
                                android:layout_gravity="center_vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        <TextView
                                android:id="@+id/textview_shangpinjianjie"
                                android:textColor="@color/hei"
                                android:textSize="@dimen/shier"
                                android:singleLine="true"
                                android:focusable="true"
                                android:layout_marginLeft="@dimen/toptwo"
                                android:ellipsize="marquee"
                                android:gravity="center"
                                android:layout_gravity="center_vertical"
                                android:marqueeRepeatLimit="marquee_forever"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/topfour"
                                />
                    </LinearLayout>

                    <LinearLayout
                            android:layout_marginTop="@dimen/topone"
                            android:id="@+id/linearlayout_xiangou"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">
                        <TextView
                                android:layout_width="wrap_content"
                                android:textColor="@color/huise"
                                android:text="限购"
                                android:textSize="@dimen/shi"
                                android:layout_height="wrap_content"/>
                        <TextView
                                android:id="@+id/textview_xiangourenci"
                                android:layout_width="wrap_content"
                                android:textColor="@color/tiltle"
                                android:textSize="@dimen/shi"
                                android:layout_height="wrap_content"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:textColor="@color/huise"
                                android:text="人次"
                                android:textSize="@dimen/shi"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">
                        <LinearLayout
                                android:layout_weight="5"
                                style="@style/layout_yh">
                            <RelativeLayout
                                    android:layout_marginTop="@dimen/topone"
                                    android:layout_marginRight="@dimen/topthree"
                                    android:layout_marginBottom="@dimen/topone"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                <ProgressBar
                                        android:id="@+id/progressbar_ol"
                                        style="?android:attr/progressBarStyleHorizontal"
                                        android:layout_width="fill_parent"
                                        android:progressDrawable="@drawable/progressbar_drwable"
                                        android:layout_height="6dp"/>
                                <LinearLayout
                                        android:layout_below="@+id/progressbar_ol"
                                        android:orientation="horizontal"
                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content">
                                    <TextView
                                            android:id="@+id/textveiw_zongxu"
                                            android:textColor="@color/huise"
                                            android:text="总需:"
                                            android:textSize="@dimen/shi"
                                            android:layout_marginBottom="@dimen/toptwo"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"/>
                                    <TextView
                                            android:id="@+id/textveiw_zongxushu"
                                            android:layout_width="wrap_content"
                                            android:textColor="@color/tiltle"
                                            android:textSize="@dimen/shi"
                                            android:layout_height="wrap_content"/>
                                    <TextView
                                            android:layout_width="0dp"
                                            android:layout_weight="1"
                                            android:layout_height="match_parent"/>
                                    <TextView
                                            android:id="@+id/textveiw_shengyu"
                                            android:textColor="@color/huise"
                                            android:text="剩余:"
                                            android:layout_centerHorizontal="true"
                                            android:textSize="@dimen/shi"
                                            android:layout_marginBottom="@dimen/toptwo"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"/>
                                    <TextView
                                            android:id="@+id/textveiw_shengyushu"
                                            android:layout_width="wrap_content"
                                            android:textColor="@color/tiltle"
                                            android:textSize="@dimen/shi"
                                            android:layout_height="wrap_content"/>
                                </LinearLayout>

                            </RelativeLayout>
                        </LinearLayout>
                        <ImageButton
                                android:layout_marginTop="@dimen/topone"
                                android:id="@+id/imagebutton_gwc"
                                android:layout_toRightOf="@+id/progressbar"
                                android:layout_width="wrap_content"
                                android:focusableInTouchMode="true"
                                android:focusable="true"
                                android:src="@drawable/add_shoppingcart"
                                android:background="@color/touming"
                                android:layout_marginBottom="@dimen/topfour"
                                android:layout_gravity="center_vertical"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <ImageView
                android:id="@+id/imagebutton_xiangou_ol"
                android:layout_width="@dimen/topfour"
                android:background="@color/touming"
                android:src="@drawable/astrict_ol"
                android:visibility="gone"
                android:layout_marginTop="@dimen/topone"
                android:layout_marginLeft="@dimen/toptwo"
                android:layout_height="@dimen/topfour"/>
        <ImageView
                android:id="@+id/imagebutton_shiyuan_ol_ol"
                android:layout_width="@dimen/topfour"
                android:background="@color/touming"
                android:visibility="gone"
                android:src="@drawable/ten"
                android:layout_marginTop="@dimen/topone"
                android:layout_marginLeft="@dimen/toptwo"
                android:layout_height="@dimen/topfour"/>
    </FrameLayout>

</LinearLayout>