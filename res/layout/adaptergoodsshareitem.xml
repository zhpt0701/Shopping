<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:gravity="center_vertical"
              android:layout_height="match_parent">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
        <ImageView
                android:id="@+id/imagebutton_sharedetail_photo"
                android:layout_marginLeft="@dimen/topone"
                android:layout_width="@dimen/w_bashi"
                android:layout_height="@dimen/h_bashi"/>
        <LinearLayout
                android:layout_marginLeft="@dimen/topone"
                android:layout_marginTop="@dimen/topone"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/topone"
                android:layout_marginRight="@dimen/topone"
                >
            <TextView
                    android:id="@+id/textview_sharedateilnickname"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/shiwu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/textview_share_title"
                    android:layout_marginTop="@dimen/toptwo"
                    android:textSize="@dimen/shiwu"
                    android:textColor="@color/hei"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/textview_share_content"
                    android:layout_marginTop="@dimen/toptwo"
                    android:textColor="@color/hei"
                    android:textSize="@dimen/shier"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/textview_share_time"
                    android:layout_marginTop="@dimen/toptwo"
                    android:textColor="@color/huise"
                    android:textSize="@dimen/shier"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>