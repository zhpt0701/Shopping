<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/linearlayout_background_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <Button
                android:id="@+id/button_man"
                android:layout_width="@dimen/w_one"
                android:textSize="@dimen/shisi"
                android:textColor="@color/hei"
                android:text="@string/man"
                android:background="@color/touming"
                android:layout_height="@dimen/h_threety"/>
        <Button
                android:id="@+id/button_woman"
                android:layout_width="@dimen/w_one"
                android:textSize="@dimen/shisi"
                android:textColor="@color/hei"
                android:text="@string/woman"
                android:background="@drawable/button_backgroud_woman"
                android:layout_height="@dimen/h_threety"/>
    </LinearLayout>
</LinearLayout>