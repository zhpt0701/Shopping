<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:fitsSystemWindows="true"
              android:background="@color/huibai"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal"
            android:background="@color/tiltle"
            android:gravity="center"
            >
        <Button
                android:id="@+id/imagebutton_record"
                style="@style/layout_anniuH"
                android:paddingLeft="@dimen/topone"
                android:drawableLeft="@drawable/arrows_l"
                android:background="@color/touming"
                android:layout_weight="1"
                />
        <TextView
                style="@style/layout_anniuH"
                android:layout_weight="3"
                android:textSize="@dimen/shiba"
                android:gravity="center"
                android:textColor="@color/bai"
                android:text="@string/record"/>
        <TextView
                style="@style/layout_anniuH"
                android:layout_weight="1"
                />
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            style="@style/layout_qj">
        <RadioGroup
                android:id="@+id/radiogroup_record"
                android:layout_weight="1"
                android:background="@drawable/radiogroupthisback"
                style="@style/layout_x">
            <RadioButton
                    android:id="@+id/radiobutton_all"
                    android:layout_weight="1"
                    android:textColor="@color/radiobuttontextclor"
                    android:textSize="@dimen/shisi"
                    android:text="@string/all"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:background="@drawable/radiobutton_dise"
                    style="@style/layout_anniuH"/>
            <RadioButton
                    android:id="@+id/radiobutton_ongoing"
                    android:layout_weight="1"
                    android:text="@string/ongoing"
                    android:textSize="@dimen/shisi"
                    android:gravity="center"
                    android:textColor="@color/radiobuttontextclor"
                    android:button="@null"
                    android:background="@drawable/radiobutton_dise"
                    style="@style/layout_anniuH"/>
            <RadioButton
                    android:id="@+id/radiobutton_publish"
                    android:layout_weight="1"
                    android:button="@null"
                    android:text="@string/publish"
                    android:gravity="center"
                    android:textColor="@color/radiobuttontextclor"
                    android:textSize="@dimen/shisi"
                    android:background="@drawable/radiobutton_dise"
                    style="@style/layout_anniuH"/>
        </RadioGroup>
        <android.support.v4.view.ViewPager
                android:id="@+id/viewpager_record"
                style="@style/layout_x"
                android:background="@color/bai"
                android:layout_weight="10"
                />
    </LinearLayout>

</LinearLayout>