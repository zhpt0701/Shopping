<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:fitsSystemWindows="true"
              android:background="@color/huibai"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:background="@color/tiltle"
            android:layout_height="@dimen/biaotigao">
        <Button
                android:id="@+id/imagebutton_shoppingdetail_oool"
                android:layout_weight="1"
                android:paddingLeft="@dimen/topone"
                android:drawableLeft="@drawable/arrows_l"
                android:background="@color/touming"
                style="@style/layout_anniuH"/>
        <TextView
                android:layout_weight="3"
                android:textSize="@dimen/shiba"
                android:textColor="@color/bai"
                android:text="@string/detail"
                android:gravity="center"
                style="@style/layout_anniuH"/>
        <TextView
                android:layout_weight="1"
                style="@style/layout_anniuH"/>
    </LinearLayout>
    <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="fill_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:background="@color/bai">
                <com.example.cloudAndPurchasing.customcontrol.listviewupdown.PullToRefreshLayout
                        android:id="@+id/pulltouoanddownshopping"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">
                    <include layout="@layout/refresh_head"/>
                    <com.example.cloudAndPurchasing.customcontrol.listviewupdown.PullableScrollView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent">
                        <LinearLayout
                                android:focusable="true"
                                android:focusableInTouchMode="true"
                                android:orientation="vertical"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent">
                            <LinearLayout
                                    android:background="@color/huibai"
                                    android:layout_width="fill_parent"
                                    android:orientation="vertical"
                                    android:layout_height="@dimen/h_erbai">
                                <android.support.v4.view.ViewPager
                                        android:id="@+id/viewpager_shoppingdetailth"
                                        android:layout_width="fill_parent"
                                        android:background="@color/bai"
                                        android:layout_height="fill_parent"
                                        />
                                <!--<fragment-->
                                        <!--android:name="com.example.cloudAndPurchasing.banner.CycleViewPager"-->
                                        <!--android:id="@+id/viewpager_shoppingdetailth"-->
                                        <!--android:layout_width="fill_parent"-->
                                        <!--android:layout_height="fill_parent"-->
                                        <!--/>-->
                            </LinearLayout>
                            <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent">

                                <LinearLayout
                                        android:layout_marginTop="@dimen/topthree"
                                        android:layout_marginBottom="@dimen/topone"
                                        android:orientation="horizontal"
                                        android:layout_width="fill_parent"
                                        android:gravity="center_vertical"
                                        android:layout_height="wrap_content"
                                        >
                                    <TextView
                                            android:layout_marginLeft="@dimen/topone"
                                            android:id="@+id/textview_shoppingdetail_jiexiao"
                                            android:layout_width="wrap_content"
                                            android:textSize="@dimen/shier"
                                            android:padding="@dimen/toptwo"
                                            android:textColor="@color/bai"
                                            android:background="@drawable/button_submititem"
                                            android:layout_height="wrap_content"
                                            />
                                    <LinearLayout
                                            android:textColor="@color/bai"
                                            android:orientation="vertical"
                                            android:gravity="right|top"
                                            android:layout_weight="1"
                                            android:layout_marginLeft="@dimen/toptwo"
                                            android:layout_height="wrap_content"
                                            android:layout_width="wrap_content">
                                        <TextView
                                                android:id="@+id/textview_shoppingdetail"
                                                android:layout_width="fill_parent"
                                                android:textSize="@dimen/shisi"
                                                android:textColor="@color/hei"
                                                android:layout_height="wrap_content"
                                                />
                                        <TextView
                                                android:layout_marginTop="@dimen/topthree"
                                                android:id="@+id/textview_shoppingdetail_numbers"
                                                android:layout_width="fill_parent"
                                                android:textSize="@dimen/shier"
                                                android:textColor="@color/huise"
                                                android:layout_height="wrap_content"/>
                                    </LinearLayout>
                                    <Button
                                            android:id="@+id/button_shoppingdetail_fenxiang"
                                            android:layout_width="wrap_content"
                                            android:textSize="@dimen/shisi"
                                            android:textColor="@color/huise"
                                            android:text="@string/xiang"
                                            android:gravity="center"
                                            android:paddingLeft="@dimen/topone"
                                            android:paddingRight="@dimen/topone"
                                            android:background="@drawable/button_fenxiang"
                                            android:drawableTop="@drawable/share_goodsdetail"
                                            android:layout_height="wrap_content"/>
                                </LinearLayout>
                                <TextView
                                        android:layout_width="fill_parent"
                                        android:layout_height="@dimen/biankuang"
                                        android:background="@color/huibai"
                                        />
                                <TextView
                                        android:id="@+id/textview_Shoppingdetail_canjia"
                                        android:layout_width="fill_parent"
                                        android:background="@color/bai"
                                        android:paddingTop="@dimen/topone"
                                        android:paddingBottom="@dimen/topone"
                                        android:gravity="center"
                                        android:textColor="@color/huise"
                                        android:textSize="@dimen/shisi"
                                        android:layout_height="wrap_content"/>
                                <TextView
                                        android:layout_width="fill_parent"
                                        android:layout_height="@dimen/biankuang"
                                        android:background="@color/huibai"
                                        />
                                <LinearLayout
                                        android:orientation="vertical"
                                        android:layout_width="fill_parent"
                                        android:background="@color/bai"
                                        android:layout_height="wrap_content">
                                    <LinearLayout
                                            android:layout_width="fill_parent"
                                            android:layout_marginLeft="@dimen/topone"
                                            android:layout_marginRight="@dimen/topone"
                                            android:orientation="vertical"
                                            android:background="@drawable/linearlayout_shoppingdetailback"
                                            android:layout_height="wrap_content">
                                        <LinearLayout
                                                android:orientation="vertical"
                                                android:layout_width="fill_parent"
                                                android:layout_height="wrap_content">
                                            <FrameLayout
                                                    android:layout_width="fill_parent"
                                                    android:layout_height="wrap_content">
                                                <LinearLayout
                                                        android:orientation="horizontal"
                                                        android:layout_width="fill_parent"
                                                        android:layout_height="wrap_content"
                                                        >
                                                    <ImageView
                                                            android:layout_marginLeft="@dimen/topone"
                                                            android:layout_marginTop="@dimen/topone"
                                                            android:src="@drawable/head_photopath"
                                                            android:id="@+id/imageview_shopping_thisphoto"
                                                            android:layout_width="@dimen/w_liushiwu"
                                                            android:background="@drawable/imageview_background"
                                                            android:layout_height="@dimen/h_liushiwu"/>
                                                    <LinearLayout
                                                            android:layout_marginTop="@dimen/topone"
                                                            android:layout_marginLeft="@dimen/topthree"
                                                            android:orientation="vertical"
                                                            android:layout_width="fill_parent"
                                                            android:layout_height="wrap_content">
                                                        <TextView
                                                                android:id="@+id/textview_zhongjiangzhe"
                                                                android:layout_width="fill_parent"
                                                                android:textColor="@color/hei"
                                                                android:textSize="@dimen/shier"
                                                                android:layout_height="wrap_content"/>
                                                        <TextView
                                                                android:id="@+id/textview_userid"
                                                                android:layout_marginTop="@dimen/topone"
                                                                android:layout_width="fill_parent"
                                                                android:textColor="@color/huise"
                                                                android:textSize="@dimen/shier"
                                                                android:layout_height="wrap_content"/>
                                                        <TextView
                                                                android:id="@+id/textveiw_caanyurenci"
                                                                android:layout_width="fill_parent"
                                                                android:layout_marginTop="@dimen/topone"
                                                                android:textSize="@dimen/shier"
                                                                android:textColor="@color/huise"
                                                                android:layout_height="wrap_content"/>
                                                        <TextView
                                                                android:id="@+id/textview_jiexiaoshijian"
                                                                android:textColor="@color/huise"
                                                                android:textSize="@dimen/shier"
                                                                android:layout_marginTop="@dimen/topone"
                                                                android:layout_width="fill_parent"
                                                                android:layout_height="wrap_content"/>
                                                    </LinearLayout>
                                                </LinearLayout>
                                                <ImageView
                                                        android:src="@drawable/owner_ol"
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"/>
                                            </FrameLayout>
                                        </LinearLayout>

                                        <LinearLayout
                                                android:layout_marginTop="@dimen/topthree"
                                                android:layout_margin="@dimen/toptwo"
                                                android:orientation="horizontal"
                                                android:gravity="center_vertical"
                                                android:layout_marginLeft="@dimen/topone"
                                                android:layout_marginRight="@dimen/topone"
                                                android:layout_marginBottom="@dimen/topone"
                                                android:background="@drawable/button_submititem"
                                                android:layout_width="fill_parent"
                                                android:layout_height="wrap_content"
                                                >
                                            <TextView
                                                    android:id="@+id/textview_zhongjianghaoma"
                                                    android:layout_width="wrap_content"
                                                    android:paddingLeft="@dimen/topone"
                                                    android:gravity="center"
                                                    android:textColor="@color/bai"
                                                    android:textSize="@dimen/shisi"
                                                    android:layout_weight="1"
                                                    android:layout_height="wrap_content"/>
                                            <Button
                                                    android:id="@+id/button_zhongjiangxiangqing"
                                                    android:layout_width="wrap_content"
                                                    android:paddingRight="@dimen/topone"
                                                    android:textColor="@color/bai"
                                                    android:text="@string/jisuan"
                                                    android:paddingTop="@dimen/topone"
                                                    android:paddingBottom="@dimen/topone"
                                                    android:gravity="center_vertical|right"
                                                    android:textSize="@dimen/shier"
                                                    android:background="@color/touming"
                                                    android:layout_weight="1"
                                                    android:layout_height="wrap_content"/>
                                        </LinearLayout>
                                    </LinearLayout>
                                    <TextView
                                            android:id="@+id/textveiw_shopping_shengming"
                                            android:layout_width="fill_parent"
                                            android:textSize="@dimen/shier"
                                            android:textColor="@color/hei"
                                            android:gravity="center"
                                            android:paddingTop="@dimen/topone"
                                            android:paddingBottom="@dimen/topone"
                                            android:layout_height="wrap_content"/>
                                </LinearLayout>
                                <TextView
                                        android:layout_width="fill_parent"
                                        android:layout_height="@dimen/topone"
                                        android:background="@color/huibai"
                                        />
                                <Button
                                        android:id="@+id/button_detailshopping_wangqi"
                                        android:layout_width="fill_parent"
                                        android:paddingTop="@dimen/topthree"
                                        android:paddingBottom="@dimen/topthree"
                                        android:gravity="center_vertical|left"
                                        android:textSize="@dimen/shisi"
                                        android:textColor="@color/hei"
                                        android:layout_marginLeft="@dimen/topone"
                                        android:drawableRight="@drawable/arrows_r"
                                        android:background="@drawable/button_newshoppingback"
                                        android:text="@string/newshopping_wangqi"
                                        android:layout_height="wrap_content"/>
                                <Button
                                        android:id="@+id/button_detailhopping_shai"
                                        android:layout_width="fill_parent"
                                        android:paddingTop="@dimen/topthree"
                                        android:paddingBottom="@dimen/topthree"
                                        android:layout_marginLeft="@dimen/topone"
                                        android:drawableRight="@drawable/arrows_r"
                                        android:gravity="center_vertical|left"
                                        android:textSize="@dimen/shisi"
                                        android:textColor="@color/hei"
                                        android:background="@drawable/button_newshoppingback"
                                        android:text="@string/newshopping_shai"
                                        android:layout_height="wrap_content"/>
                                <Button
                                        android:id="@+id/button_detailhopping_touwen"
                                        android:layout_width="fill_parent"
                                        android:paddingTop="@dimen/topthree"
                                        android:paddingBottom="@dimen/topthree"
                                        android:layout_marginLeft="@dimen/topone"
                                        android:drawableRight="@drawable/arrows_r"
                                        android:gravity="center_vertical|left"
                                        android:textSize="@dimen/shisi"
                                        android:textColor="@color/hei"
                                        android:background="@drawable/button_newshoppingback"
                                        android:text="@string/newshopping_tuwen"
                                        android:layout_height="wrap_content"/>
                                <TextView
                                        android:textSize="@dimen/shisi"
                                        android:textColor="@color/hei"
                                        android:layout_marginLeft="@dimen/topone"
                                        android:drawableRight="@drawable/arrows_r"
                                        android:paddingTop="@dimen/topthree"
                                        android:paddingBottom="@dimen/topthree"
                                        android:gravity="center_vertical|left"
                                        android:text="@string/record_cayu"
                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content"/>
                                <TextView
                                        android:background="@color/huibai"
                                        android:layout_width="fill_parent"
                                        android:layout_height="@dimen/biankuang"/>
                                <com.example.cloudAndPurchasing.customcontrol.ThisListView
                                        android:id="@+id/listview_updategoodsdateil"
                                        android:divider="@color/huibai"
                                        android:dividerHeight="@dimen/biankuang"
                                        android:listSelector="@color/touming"
                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content">

                                </com.example.cloudAndPurchasing.customcontrol.ThisListView>
                            </LinearLayout>
                        </LinearLayout>
                    </com.example.cloudAndPurchasing.customcontrol.listviewupdown.PullableScrollView>
                    <include layout="@layout/load_more"/>
                </com.example.cloudAndPurchasing.customcontrol.listviewupdown.PullToRefreshLayout>

            </LinearLayout>
            <TextView
                    android:layout_width="fill_parent"
                    android:background="@color/huibai"
                    android:layout_height="@dimen/biankuang"/>
            <LinearLayout
                    android:id="@+id/linearlayout_shoppingdetail_content"
                    android:layout_gravity="bottom"
                    android:layout_width="fill_parent"
                    android:orientation="horizontal"
                    android:background="@color/bai"
                    android:gravity="center_vertical"
                    android:layout_height="@dimen/h_sishiwu">

                <TextView
                        android:id="@+id/textview_jinxingzhongthi"
                        android:layout_width="wrap_content"
                        android:textColor="@color/huise"
                        android:textSize="@dimen/shisi"
                        android:layout_weight="1"
                        android:paddingLeft="@dimen/topone"
                        android:gravity="center_vertical"
                        android:layout_height="wrap_content"/>
                <Button
                        android:id="@+id/button_jinxingzhong"
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/shisi"
                        android:textColor="@color/huibai"
                        android:text="@string/go_on"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/topthree"
                        android:layout_gravity="right|center_vertical"
                        android:paddingLeft="@dimen/topthree"
                        android:paddingRight="@dimen/topthree"
                        android:layout_marginRight="@dimen/topthree"
                        android:background="@drawable/button_submititem"
                        android:layout_height="@dimen/h_sanshisi"/>
            </LinearLayout>
        </LinearLayout>
        <include layout="@layout/loading"/>
    </FrameLayout>
</LinearLayout>